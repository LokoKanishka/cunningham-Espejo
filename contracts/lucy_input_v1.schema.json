{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lucy.local/contracts/lucy_input_v1.schema.json",
  "title": "Lucy Input v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "source", "ts"],
  "properties": {
    "kind": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "source": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "text": {
      "type": "string",
      "minLength": 1,
      "maxLength": 20000
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "correlation_id": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128
    }
  }
}
