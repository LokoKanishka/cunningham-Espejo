{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lucy.local/contracts/lucy_ack_v1.schema.json",
  "title": "Lucy Gateway ACK v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["ok", "correlation_id", "received_ts", "status"],
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "correlation_id": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128
    },
    "received_ts": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "const": "accepted"
    },
    "next": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "reason": {
      "type": "string",
      "minLength": 1,
      "maxLength": 512
    },
    "outbox_path": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "outbox_contract": {
      "type": "string",
      "const": "lucy_output_v1"
    }
  }
}
