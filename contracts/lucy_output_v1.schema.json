{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lucy.local/contracts/lucy_output_v1.schema.json",
  "title": "Lucy Output Envelope v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "ok", "correlation_id", "status", "response_ts"],
  "properties": {
    "version": {
      "type": "string",
      "const": "lucy_output_v1"
    },
    "ok": {
      "type": "boolean"
    },
    "correlation_id": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128
    },
    "status": {
      "type": "string",
      "enum": ["ok", "error", "pending"]
    },
    "response_ts": {
      "type": "string",
      "format": "date-time"
    },
    "result": {
      "type": "object"
    },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["message"],
      "properties": {
        "rc": {"type": "integer"},
        "message": {"type": "string", "minLength": 1},
        "stderr": {"type": "string"},
        "stdout": {"type": "string"},
        "stage": {"type": "string", "minLength": 1}
      }
    }
  },
  "allOf": [
    {
      "if": {"properties": {"ok": {"const": true}}},
      "then": {"required": ["result"]}
    },
    {
      "if": {"properties": {"ok": {"const": false}}},
      "then": {"required": ["error"]}
    }
  ]
}
